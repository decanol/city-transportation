<form action="/stations/create" method="post">
    <h3>Create Record</h3>
    <div class="inputs">
        <div class="input-field">
            <input type="text" name="stations" class="validate" pattern="^[a-zA-Z0-9\s,'-]*$">
            <label>Station</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
    </div>

    <button type="submit" class="btn waves-effect waves-light" id="submitForm" disabled="disabled">Create
        <i class="material-icons right">add_box</i>
    </button>
</form>


<h3>Stations</h3>
{{#if stations.length}}
    <ul class="collection">
        {{#each stations}}
            <li class="collection-item">
                {{stations}}
                <div class="btns">
                    <a class="edit-btn"><i class="material-icons delete-station">edit</i></a>
                    <a href="/stations/delete/{{_id}}" class="delete-btn"><i class="material-icons delete-station">delete</i></a>
                </div>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>*table's empty</p>
{{/if}}
