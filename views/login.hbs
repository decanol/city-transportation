<ul>
    <li>
        <form action="/login" method="post" class="form-reg">
            <h3>Login</h3>
            <div class="inputs">
                <div class="input-field">
                    <input type="text" name="login">
                    <label>Login</label>
                    <span class="helper-text" data-error="A-z, 4+ characters" data-success="right"></span>
                </div>
            </div>

            <div class="inputs">
                <div class="input-field">
                    <input type="password" name="password">
                    <label>Password</label>
                    <span class="helper-text" data-error="A-z, 0-9, 8+ characters" data-success="right"></span>
                </div>
            </div>
            <button type="submit" class="btn waves-effect waves-light" id="submitForm" disabled="disabled">Log In
                <i class="material-icons right">login</i>
            </button>
        </form>
    </li>
</ul>

