<form action="/waybills/edit/{{id}}" method="post">
    <h3>Update Record</h3>

    <div class="inputs">
        <div class="input-field col s12">
            {{#select waybills.tail_number}}
                <select name="tail_number">
                    {{#if tail_number.length}}
                        {{#each tail_number}}
                            <option>{{tail_number}}</option>
                        {{/each}}
                    {{else}}
                        <option disabled></option>
                    {{/if}}
                </select>
            {{/select}}
            <label>Tail â„–</label>
            <span class="helper-text" data-error="" data-success=""></span>
        </div>
        <div class="input-field">
            {{#select waybills.rout_number}}
                <select name="rout_number">
                    {{#if rout_number.length}}
                        {{#each rout_number}}
                            <option>{{rout_number}}</option>
                        {{/each}}
                    {{else}}
                        <!--                    <option disabled></option>-->
                    {{/if}}
                </select>
            {{/select}}
            <label>Rout</label>
            <span class="helper-text" data-error="" data-success=""></span>
        </div>
        <div class="input-field">
            <input type="text" class="datepicker validate" name="waybills_date" value="{{waybills.waybills_date}}"
                   pattern="^[A-z]{3} [0-9]{2}, [0-9]{4}$">
            <label>Date</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
        <div class="input-field">
            <input type="text" name="done_trips" value="{{waybills.done_trips}}" class="validate" pattern="^[1-9]+$">
            <label>Done</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
    </div>

    <div class="inputs">
        <div class="input-field">
            {{#select waybills.drivers}}
                <select name="drivers">
                    {{#if drivers.length}}
                        {{#each drivers}}
                            <option>{{reg_number}}</option>
                        {{/each}}
                    {{else}}
                        <option disabled></option>
                    {{/if}}
                </select>
            {{/select}}
            <label>Drivers</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
        <div class="input-field">
            {{#select waybills.conductors}}
                <select name="conductors">
                    {{#if conductors.length}}
                        {{#each conductors}}
                            <option>{{reg_number}}</option>
                        {{/each}}
                    {{else}}
                        <option disabled></option>
                    {{/if}}
                </select>
            {{/select}}
            <label>Conductors</label>
            <span class="helper-text" data-error="" data-success=""></span>
        </div>
    </div>


    <button type="submit" class="btn waves-effect waves-light">Update
        <i class="material-icons right">update</i>
    </button>
</form>
