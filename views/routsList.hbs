<form action="/routsList/create" method="post">
    <h3>Create Record</h3>
    <div class="inputs">
        <div class="input-field">
            <input type="number" min="1" name="rout_number" class="validate" pattern="^[0-9]{3}$">
            <label>Rout №</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
    </div>
    <div class="inputs">
        <div class="input-field col s12">
            <select name="stations[]">
                {{#if stations.length}}
                    {{#each stations}}
                        <option>{{stations}}</option>
                    {{/each}}
                {{else}}
                    <option disabled></option>
                {{/if}}
            </select>
            <label>Stations</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
    </div>
    <button type="button" class="btn waves-effect waves-light btn-icon" id="addTitle">
        <i class="material-icons right">add_circle_outline</i>
    </button>
    <button type="submit" class="btn waves-effect waves-light" id="submitForm" disabled="disabled">Create
        <i class="material-icons right">add_box</i>
    </button>
</form>


