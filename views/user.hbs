<form action="/user/create" method="post">
    <h3>Create Record</h3>
    <div class="inputs">
        <div class="input-field">
            <input type="text" name="login" class="validate" pattern="^[a-zA-Z\-]{4,}$">
            <label>Login</label>
            <span class="helper-text" data-error="A-z, 4+ characters" data-success="right"></span>
        </div>
    </div>

    <div class="inputs">
        <div class="input-field">
            <input type="password" name="password" class="validate" pattern="^(?=.*\d)(?=.*[a-z])[0-9a-zA-Z]{8,}$">
            <label>Password</label>
            <span class="helper-text" data-error="A-z, 0-9, 8+ characters" data-success="right"></span>
        </div>
    </div>
    <button type="submit" class="btn waves-effect waves-light" id="submitForm" disabled="disabled">Create
        <i class="material-icons right">add_box</i>
    </button>
</form>

<h3>Users</h3>

{{#if user.length}}
    <ul class="collection">
        {{#each user}}
            <li class="collection-item">{{login}}
                <a href="/user/delete/{{_id}}" class="delete-btn"><i class="material-icons delete-station">delete</i></a>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>*table's empty</p>
{{/if}}
