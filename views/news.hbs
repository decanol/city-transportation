<form action="/news/create" method="post">
    <h3>Create Record</h3>
    <div class="inputs">
        <div class="input-field">
            <input type="text" name="title_news" class="validate" pattern="^[A-z]{1-3}$">
            <label>Title</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
    </div>

    <div class="inputs">
        <div class="input-field col s12">
            <textarea id="textarea1" class="materialize-textarea" name="content_news"></textarea>
            <label for="textarea1">Content</label>
            <span class="helper-text" data-error="" data-success=""></span>
        </div>
    </div>
    <button type="submit" class="btn waves-effect waves-light" id="submitForm" disabled="disabled">Create
        <i class="material-icons right">add_box</i>
    </button>
</form>

<h3>News List</h3>

{{#if news.length}}
    <div class="news-list-adm">
    <ul>
        {{#each news}}
                <li>
                    <h5>
                        {{title_news}}
                    </h5>
                    <p>
                        {{content_news}}
                    </p>
                    <a href="/news/delete/{{_id}}" class="btn waves-effect waves-light delete-btn">Delete</a>
                    <a href="/news/edit/{{_id}}" class="btn waves-effect waves-light delete-btn">Edit</a>
                </li>
        {{/each}}
    </ul>
    </div>
{{else}}
    <p>*table's empty</p>
{{/if}}
