{{#if vacancy.length}}
    <ul>
        {{#each vacancy}}
                <li>
                    <h3>
                        {{title_vacancy}}
                    </h3>
                    <div class="content-apply-btn">
                        <p>
                            {{content_vacancy}}
                        </p>
                        <!-- Modal Trigger -->
                        <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Apply</a>
                    </div>
                </li>
        {{/each}}
    </ul>
{{else}}
    <p>Something is coming</p>
{{/if}}

